!!! 5
html
	head
		block title
			title PingPong

		block stylesheets
			link(rel='stylesheet', href='/stylesheets/game.css')

		block scripts
			script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
			script(type='text/javascript', src='/javascripts/hashchange.min.js')
			script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
			if session.user
				script(type='text/javascript', src='/javascripts/socket.io.js')
				script(type='text/javascript', src='/javascripts/cliball.js')
				script(type='text/javascript', src='/javascripts/game.js')


	body
		block navbar
			include mixins/player
			.navbar.navbar-fixed-top
				.navbar-inner
					.container
						a.brand(href="/") PingPong
						.nav-collapse
							ul.nav
								if !session.user
									li(class=page=='login' ? 'active' : '')
										a(href="/login/") Login
									li(class=page=='registration' ? 'active' : '')
										a(href="/registration/") Registration
								else
									li
										a(href="/logout/") Logout
							if session.user
								mixin profile-label(session.user)

		block content
		block footer